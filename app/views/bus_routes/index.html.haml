%h2 All Transbay Bus Routes
- if @bus_routes.count == 0
  .refresh-routes-link
    = link_to "Refresh Routes", refresh_bus_routes_path
.grid-layout
  - @bus_routes.each do |bus_route|
    .full-length-item
      .bus-route-list-entry
        .route-name-box
          .route-name= link_to bus_route.name, bus_route_path(bus_route)
        .direction-b-box
          .direction-button= link_to "To SF", bus_route_path(bus_route, :direction => bus_route.direction_b)
        .direction-a-box
          .direction-button= link_to "To #{bus_route.description_to_s}", bus_route_path(bus_route, :direction => bus_route.direction_a)